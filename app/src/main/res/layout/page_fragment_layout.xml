<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timboat.coolapp.PageFragment"
    android:orientation="vertical"
    android:background="@drawable/white_background"
    android:id="@+id/entire_fragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:textSize="40dp"
        android:text="Wishlist"
        android:textColor="@color/secondaryColorLight"
        android:fontFamily="@font/roboto_light"
        android:layout_marginTop="50dp"
        android:visibility="visible"/>

    <ListView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bubble_open_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="335dp"
        android:src="@drawable/ic_action_plus"
        android:elevation="6dp"
        app:backgroundTint="@color/colorAccent"
        app:pressedTranslationZ="12dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bubble_element2"
        android:src="@drawable/ic_action_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="335dp"
        android:elevation="6dp"
        android:adjustViewBounds="true"
        app:backgroundTint="@color/colorPrimary"
        app:pressedTranslationZ="12dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bubble_element1"
        android:src="@drawable/ic_action_tshirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="335dp"
        android:elevation="6dp"
        app:backgroundTint="@color/colorPrimaryLight"
        app:pressedTranslationZ="12dp"
        android:visibility="invisible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bubble_element3"
        android:src="@drawable/ic_action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="335dp"
        android:elevation="6dp"
        app:backgroundTint="@color/secondaryColorLight"
        app:pressedTranslationZ="12dp"
        android:visibility="invisible" />

</RelativeLayout>
